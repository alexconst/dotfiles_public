! NOTE:
!   - to reload resources run: xrdb ~/.Xresources
!   - for more config options check https://manpages.debian.org/bullseye/rxvt-unicode/x-terminal-emulator.1.en.html
!   - this configuration uses the `XTerm` config (X11-based terminal emulator) instead of the `xterm` (legacy termcap-based application)
!   - to access xterm menus press ctrl+mouse (left, middle, right)


!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!
! fonts
!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!

Xft.dpi       : 96
Xft.autohint  : 0
Xft.lcdfilter : lcddefault
Xft.hintstyle : hintslight
Xft.hinting   : 1
Xft.antialias : 1
Xft.rgba      : rgb


!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!
! xterm
!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!

! Sensible defaults
XTerm.vt100.locale:                false
XTerm.vt100.utf8:                  true
XTerm.vt100.bellIsUrgent:          true
XTerm.vt100.metaSendsEscape:       true
XTerm.vt100.cursorBlink:           false
XTerm.vt100.highlightSelection:    true
XTerm.vt100.trimSelection:         true

! Tweaks
!! report TERM variable with 256 colors support
XTerm*termName:                    xterm-256color
!! sixel support
XTerm*decTerminalID:               vt382
XTerm*numColorRegisters:           256

! Scrolling
XTerm.vt100.scrollKey:             true
XTerm.vt100.scrollBar:             true
XTerm.vt100.rightScrollBar:        true
XTerm.vt100.scrollWithBuffer:      true
XTerm.vt100.scrollTtyKeypress:     true
XTerm.vt100.scrollTtyOutput:       false
XTerm.vt100.saveLines:             10000

! Styling
XTerm.vt100.faceName:              xft:DejaVu Sans Mono:size=12:antialias=true:style=Regular
XTerm.vt100.boldFont:              xft:DejaVu Sans Mono:size=12:antialias=true:style=Bold
XTerm.vt100.boldMode:              false
XTerm.vt100.allowBoldFonts:        true
XTerm.vt100.internalBorder:        8
XTerm.borderWidth:                 0
! Menu Names
XTerm*.mainMenu.label:             File
XTerm*.vtMenu.label:               Options
XTerm*.fontMenu.label:             View

! Shortcuts
!   show past screen (closed or hidden) with ctrl+shift+h
!   scroll up/down with ctrl+d/ctrl+u
!   copy/paste to/from clipboards with ctrl+shift+c/ctrl+shift+v
XTerm.vt100.translations: #override \n\
    Ctrl Shift <Key>H: set-altscreen(toggle) \n\
    Ctrl <Key>U: scroll-back(1, halfpage) \n\
    Ctrl <Key>D: scroll-forw(1, halfpage) \n\
    Ctrl Shift <Key>C: copy-selection(CLIPBOARD) \n\
    Ctrl Shift <Key>V: insert-selection(CLIPBOARD)

